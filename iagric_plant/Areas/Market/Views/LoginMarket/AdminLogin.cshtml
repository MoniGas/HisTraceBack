    <script src="@Url.Content("~/Areas/Market/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        document.onkeydown = function (e) {
            var theEvent = window.event || e;
            var code = theEvent.keyCode || theEvent.which;
            if (code == 13) {
                $("#btnlogin").click();
            }
        }
        $('#btnlogin').on('click', function () {
            $("#btnlogin").click(function () {
                if ($("#loginName").val() == "") {
                    alert("请输入用户名！");
                    return false;
                }
                if ($("#loginPass").val() == "") {
                    alert("请输入密码！");
                    return false;
                }
                if ($("#CheckCode").val() == "") {
                    alert("请输入验证码！");
                    return false;
                }
                $.post('@Url.Action("AdminLogin")', { loginName: $("#loginName").val(), loginPass: $("#loginPass").val(), yzCode: $("#CheckCode").val() }, function (data) {
                    if (data.res) {
                        location.href = data.url;
                    }
                    else {
                        alert(data.info);
                        AA();
                    }
                });
            });
        });
        $(function () {
            $("#btnlogin").click(function () {
                if ($("#loginName").val() == "") {
                    alert("请输入用户名！");
                    return false;
