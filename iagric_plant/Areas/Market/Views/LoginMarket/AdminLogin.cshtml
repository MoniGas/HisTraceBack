                    if (data.res) {
                        location.href = data.url;
                    }
                    else {
                        alert(data.info);
                        AA();
                    }
                });
            });
        })
        function AA() {
            $("#imageCode").attr("src", "/Market/HomeMarket/CheckImg?" + new Date());
        }
    </script>
</head>
