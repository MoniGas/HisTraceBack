                                                    <input type="hidden" id="ImagePath" value="@Model.LotteryPic" />
                                                    <div id="showimg" style="display: none;">
                                                        <img id="imgsrc" style="max-height: 100px; max-width: 100px;" src="@Model.LotteryPic">
                                                        <a id="delActivity" href="#">删除</a>
