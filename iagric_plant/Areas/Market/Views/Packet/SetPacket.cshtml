<script type="text/javascript">
    function closewin() {
        var parentwin = artDialog.open.origin;
        var amount = $("#amount").val();
        if (!isNumber(amount)) {
            alert('红包数量请输入正整数');
            return;
        }
        if (parseFloat(amount) > 10000 || parseFloat(amount) <= 0) {
            alert('红包数量在0-10000之间');
            return;
        }
        var sum = $("#sum").val();
        if (!isMoney(sum)) {
            alert('红包金额必须是有效数字，最多保留两位小数');
            return;
        }
        if (parseFloat(sum) > 200 || parseFloat(sum) < 0.3) {
            alert('红包金额在0.3-200之间');
            return;
        }
        var total = amount * sum;
        parentwin.AfterSet(amount, sum, total);
        art.dialog.close();
    }
</script>
<div>
<body style="min-width: 0; width: 400px;">		
			<!-------------------main start---------------------------------->
				<div class="card_pa20 clearfix">
					<div class="mod-main">
