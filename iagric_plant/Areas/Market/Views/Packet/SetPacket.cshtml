                                    <div class="fl">
                                        <input type="text" style="width: 180px;"id="sum" name="sum" maxlength="6"/> 元
                                    </div>
                                </div>
                                <div class="infoitem">
                                    <span class="label">红包数量：</span>
                                    <div class="fl">
                                        <input type="text" style="width: 180px;"id="amount" name="amount" maxlength="5"/> 个
                                    </div>
                                </div>
                                <div class="infoitem">
                                    <p class="center mat20"><input type="button" value="确定" class="button" onclick="closewin()"></p>
                                </div>
                            </div>
