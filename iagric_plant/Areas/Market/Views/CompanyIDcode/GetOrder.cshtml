@{
    ViewBag.Title = "查看订单";
    Layout = "~/Areas/Market/Views/Shared/_Layout.cshtml";
}
<style>
    html
    {
        overflow-x:hidden;
    }
</style>
@model LinqModel.View_BuyCodeOrder
			<div class="card_pa20 clearfix">
					<div class="mod-main">
						<div class="mc clearfix">
                        <div class="user-set userset-lcol mar30">
                            <div class="form hd-manage-det">
                                <div class="infoitem">
                                    <span class="label">订单号：</span>
                                    <div class="fl">
                                        <span>@Model.OrderNum</span>
                                    </div>
                                </div>
                                <div class="infoitem">
                                    <span class="label">套餐：</span>
                                    <div class="fl">
                                        <span>@Model.PackageName</span>
                                    </div>
                                </div>
                                <div class="infoitem">
                                    <span class="label">码数量：</span>
                                    <div class="fl">
                                        <span>@(Model.PackageCodeCount)个</span>
                                    </div>
                                </div>
								<div class="infoitem">
                                    <span class="label">套餐价：</span>
                                    <div class="fl">
                                        <span class="red"><em>￥</em>@(Model.PackagePrice)</span>
                                    </div>
                                </div>
                                <div class="infoitem">
                                    <span class="label">购买时间：</span>
                                    <div class="fl">
                                    	<span>@(Model.CreateDate.Value.ToString("yyyy-MM-dd"))</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="user-set userset-lcol">
                            <div class="form">
                                <div class="infoitem">
                                    <span class="label">支付方式：</span>
                                    <div class="fl">
                                        <span class="blueblock mat8">@(Common.EnumText.EnumToText(typeof(Common.EnumText.PayType),Model.PayMode.Value))</span>
                                    </div>
                                </div>
                                <div class="infoitem">
                                    <span class="label">支付账户：</span>
                                    <div class="fl">
                                        <span>@Model.PayAccount</span>
                                    </div>
                                </div>
                                <div class="infoitem">
                                    <span class="label">支付额：</span>
                                    <div class="fl">
                                        <span class="red"><em>￥</em>@Model.RealPrice</span>
                                    </div>
                                </div>
								<div class="infoitem">
                                    <span class="label">支付日期：</span>
                                    <div class="fl">
                                        <span>@Model.PayDate.Value.ToString("yyyy-MM-dd")</span>
                                    </div>
                               </div>
                            </div>
                        </div>
                  </div>
					</div>
				</div>

