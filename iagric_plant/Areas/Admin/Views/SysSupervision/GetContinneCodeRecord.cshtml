@using Webdiyer.WebControls.Mvc;
@model PagedList<LinqModel.View_ContinueCode>
@{
    ViewBag.Title = "GetContinneCodeRecord";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
</script>
<body>
    <!-------------------main start---------------------------------->
    <div>
        <form id="form1" method="get" action="/Admin/SysSupervision/GetContinneCodeRecord?eid=@ViewBag.eid">
        <input id="eid" type="hidden" name="eid" value="@ViewBag.eid" />
        <div class="main_hd clearfix">
            <ul class="breadcrumb">
                <li class="icofont-home"><span class="dqwz">当前位置：</span></li>
                <li class="dqwz">代理管理<span class="divider">›</span><a href="/Admin/SysSupervision/Index">查看企业</a><span
                    class="divider">›</span>续码记录</li><li class="goback"><span class="shuline">|</span>
                    <a href="/Admin/SysSupervision/GetPlatInfo?eid=@ViewBag.eid">返回</a></li></span>
            </ul>
        </div>
        <div class="card_pa40 clearfix">
            <div class="mod-main">
                <div class="table-filter borderLeft borderRight clearfix">
                    <div class="sitem">
                        筛选：
                        <input type="text" style="width: 120px;" id="sDate" name="sDate" value="@ViewBag.sDate" cssclass="Wdate" onclick="WdatePicker()" readonly="readonly">
                        至
                        <input type="text" style="width: 120px;" readonly="readonly" onclick="WdatePicker()" id="eDate" name="eDate" value="@ViewBag.eDate" cssclass="Wdate">
                    </div>
                    <div class="sitem">
                        <input type="submit" id="btnSearch" name="btnSearch" value="查询" class="button">
                    </div>
                </div>
                <div class="boxtable mat20">
                    <table>
                        <thead>
                            <tr>
                            <th>
                            企业名称
                            </th>
                                <th>
                                    续码时间
                                </th>
                                <th>
                                    数量
                                </th>
                                <th>
                                    费用
                                </th>
                                <th>
                                    操作人
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                if (Model != null)
                                {
                                    foreach (var sub in Model)
                                    {
                                <tr>
                                <td>
                                @sub.EnterpriseName
                                </td>
                                    <td>
                                        @sub.AddDate
                                    </td>
                                    <td>
                                        @sub.CodeCount
                                    </td>
                                    <td>
                                        @sub.Price 元
                                    </td>
                                    <td>
                                        @sub.AddUser
                                    </td>
                                </tr>
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
                @if (Model.TotalItemCount > 0)
                {
                    <div class="mod-page fy">
                        <div>
                            @Html.Pager(Model, new Webdiyer.WebControls.Mvc.PagerOptions
                       {
                           PageIndexParameterName = "id",
                           FirstPageText = "首页",
                           ShowNumericPagerItems = true,
                           ShowPageIndexBox = true,
                           ShowGoButton = true,
                           GoButtonText = "跳转",
                           PageIndexBoxType = Webdiyer.WebControls.Mvc.PageIndexBoxType.TextBox,
                           LastPageText = "尾页",
                           NextPageText = "下一页",
                           PrevPageText = "上一页",
                           AutoHide = false,
                           CurrentPagerItemWrapperFormatString = "<span class=\"mod-page-cur\">{0}</span>"
                       })
                        </div>
                        每页@(Model.PageSize)条共@(Model.TotalPageCount)页共@(Model.TotalItemCount)条
                    </div>
                }
            </div>
        </div>
        </form>
    </div>
    <!-------------------main end---------------------------------->
</body>
