<html>
<head>
    <meta charset="UTF-8">
    <title>医疗器械（UDI）服务云平台</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0,user-scalable=no"
        id="viewport">
    <link rel="stylesheet" type="text/css" href="../public_css/base.css">
    <link rel="stylesheet" type="text/css" href="../public_css/public-style.css">
    <link rel="stylesheet" type="text/css" href="../public_css/login.css">
    <script src="/Scripts/jquery-1.7.2.min.js" type="text/javascript"></script>
    <script src="/Scripts/glvalidate.js" type="text/javascript"></script>
    <script type="text/javascript">
        document.documentElement.style.fontSize = document.documentElement.clientWidth / 7.5 + 'px';
    </script>
    <script type="text/javascript">
        function deleteAddress(url) {
            if (confirm('您确定要删除该收货地址吗？')) {
                $.ajax({
                    type: 'POST',
                    url: url,
                    success: function (data) {
                        if (data.info != null && data.info != "") {
                            alert(data.info);
                        }
                        if (data.res) {
                            if (data.url != null && data.url != "") {
                                window.location.href = data.url;
                            }
                        }
                    }
                });
            }
        }
    </script>
</head>
<body>
    <header class="OriginHead bar-green">
        <a href="/Wap_Consumers/SheZhi" class="bar-item pull-left"><i class="icon bar-arrow-left">
        </i></a>
        <h1 class="bar-title">
            管理收货地址</h1>
    </header>
    <div class="coupon-content">
        <div class="address">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                <div class="address-item box box-lr box-pack-between address-item-isDefault">
                    <div class="flex box box-tb">
                        <div class="box box-lr">
                            <div class="flex detail box box-tb detail-isDefault">
                                <div class="basic box box-lr box-pack-between">
                                    <div class="name box box-lr">
                                        @if (item.Order_Consumers_Address_ID == ViewBag.ConsumersAddressId)
                                        {
                                            <span class="default box box-center-center">默认 </span>
                                        }<span class="default-name">@item.LinkMan </span>
                                    </div>
                                    <div class="tel">
                                        @item.LinkPhone
                                    </div>
                                </div>
                                <div class="addr">
                                    @listAddress.AddressList.FirstOrDefault(m => m.AddressCode == item.ProvinceID.ToString()).AddressName
                                    @listAddress.AddressList.FirstOrDefault(m => m.AddressCode == item.CityID.ToString()).AddressName
                                    @listAddress.AddressList.FirstOrDefault(m => m.AddressCode == item.AreaID.ToString()).AddressName
                                    &nbsp;&nbsp;
                                    @item.Address
                                </div>
                            </div>
                            <script type="text/javascript">
                                function aEditClick(id) {
                                    var time = getNowFormatDate();
                                    window.location.href = '/Wap_Address/Edit?Random=' + time + '&consumerAdressId=' + id
                                }
                                function getNowFormatDate() {
                                    var date = new Date();
                                    var seperator1 = "-";
                                    var seperator2 = ":";
                                    var month = date.getMonth() + 1;
                                    var strDate = date.getDate();
                                    if (month >= 1 && month <= 9) {
                                        month = "0" + month;
                                    }
                                    if (strDate >= 0 && strDate <= 9) {
                                        strDate = "0" + strDate;
                                    }
                                    var currentdate = date.getFullYear() + seperator1 + month + seperator1 + strDate
                                    + " " + date.getHours() + seperator2 + date.getMinutes()
                                    + seperator2 + date.getSeconds();
                                    return currentdate;
                                } 
                            </script>
                            <div class="edit box box-tb">
                                <div class="edit-img" onclick="aEditClick('@item.Order_Consumers_Address_ID')">
                                </div>
                            </div>
                            <div class="edit box box-tb" style="margin-left:5px">
                                <a href="javascript:deleteAddress('/Wap_Address/Delete?consumerAdressId=@item.Order_Consumers_Address_ID')">
                                    <div class="del-img">
                                    </div>
                                </a>
                            </div>
                        </div>
                        @if (item.Order_Consumers_Address_ID == ViewBag.ConsumersAddressId)
                        {
                            <div class="set-default  box box-lr box-align-center set-default-isDefault">
                                <input type="radio" checked="checked" />
                                <label>
                                    默认地址</label>
                            </div>
                        }
                    </div>
                </div>
                }
            }
            <div class="page__bd page__bd_spacing" style="margin-top: .4rem;">
                <a href="/Wap_Address/Add" class="syui-btn syui-btn_primary">新增地址</a>
            </div>
        </div>
    </div>
</body>
</html>
