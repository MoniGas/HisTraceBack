
@{
    ViewBag.Title = "Video";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <link href="/wapstyle/css/base.css" rel="stylesheet" type="text/css" />
    <link href="/wapstyle/css/style.css" rel="stylesheet" type="text/css" />
    <meta charset="UTF-8">
    <title></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0,user-scalable=no"
        id="viewport">
    <script type="text/javascript">
        document.documentElement.style.fontSize = document.documentElement.clientWidth / 7.5 + 'px';
    </script>
    <style type="text/css">
        .m_header_mask
        {
            display: none;
            position: fixed;
            width: 100%;
            z-index: 11;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: #000;
            opacity: 0.8;
        }
        #divImg
        {
            position: absolute;
            width: 100%;
            text-align: center;
            z-index: 225;
            display: none;
            margin: 0px auto;
            top: 50%;
        }
        #divImg img
        {
            width: 100%;
        }
    </style>
    <script src="../../Scripts/jquery-1.7.2.min.js" type="text/javascript"></script>
        <script src="/wapstyle/js/jquery.touchSlider.js" type="text/javascript"></script>
            <script src="../../wapstyle/js/phone.js" type="text/javascript"></script>
                <script src="/wapstyle/js/jquery.event.drag-1.5.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        var media = document.getElementById("video1");
        var i = 0;
        media.addEventListener("play", function () {
            if (i == 1) {
                return;
            }
            media.pause();
            if (confirm("该视频将消耗流量，是否继续播放！")) {
                i = 1;
                media.play();
            }
            else {
                i = 1;
            }
        });
    </script>
</head>
<body>
    <header class="OriginHead bar-green">
			<a href="/Wap_Index/VideoList" class="bar-item pull-left"><i class="icon bar-arrow-left"></i><span>返回</span></a>
			<h1 class="bar-title">@ViewBag.name</h1>
		</header>
    <div class="main">
        @if (!string.IsNullOrEmpty(ViewBag.url))
        {
            <div class="list clearfix">
                <div class="media-graphic">
                        <video src="@ViewBag.url" id="video1" poster="@Url.Content("~/images/videonoimg.png")" controls="controls" width="100%" height="100%">
                您的浏览器不支持视频播放。
            </video>
                </div>
                <p class="tips">
                    <span class="warning">*</span>视频耗费流量，建议WIFI环境下查看。<br>
                    <span class="note">点击播放视频</span>
                </p>
            </div>
        }
    </div>
    <div class="m_header_mask" style="display: none;">
    </div>
</body>
</html>
