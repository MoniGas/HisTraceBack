@model LinqModel.View_BatchZuoye
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0,user-scalable=no"
        id="viewport">
    <link href="/wapstyle/css/base.css" rel="stylesheet" type="text/css" />
    <link href="/wapstyle/css/style.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript">
        document.documentElement.style.fontSize = document.documentElement.clientWidth / 7.5 + 'px';
		</script>
</head>
<body>
    <header class="OriginHead bar-green">
			<a href="@Url.Action("Index")" class="bar-item pull-left"><i class="icon bar-arrow-left"></i><span>首页</span></a>
			<h1 class="bar-title"><a>班组信息</a></h1>
		</header>
    <div class="main">
        <div class="list banzu-item clearfix">
            <div class="list-title border-bom">@Model.OperationTypeName
            </div>
            <div class="prod-spec">
                <div class="spec-desc">
                    <span class="part-note-msg">生产班组</span>
                    <div class="banzu-txt">
                        @Model.TeamName
                    </div>
                </div>
                <div class="spec-desc">
                    <span class="part-note-msg">生产日期</span>
                    <div class="banzu-txt">
                        @(Model.AddDate==null?"":Model.AddDate.Value.ToString("yyyy-MM-dd HH:mm"))
                    </div>
                </div>
                <div class="spec-desc">
                    <span class="part-note-msg">生产人员</span>
                    <div class="banzu-txt">
                        @if (ViewBag.TeamLst != null)
                        {
                            foreach (var item in ViewBag.TeamLst)
                            {
                            <span class="m_name">@item.UserName</span>
                            }
                        }
                    </div>
                </div>
                <div class="spec-desc">
                    <span class="part-note-msg">操作内容</span>
                    <div class="banzu-txt">
                        @Html.Raw(Model.Content)
                    </div>
                </div>
            </div>
              @if (Model.imgs != null && Model.imgs.Count > 0)
            {
                <div class="jianyi_list no-border-bottom">
                    <h2>
                        生产图片</h2>
                    <div class="product-des">
                        @foreach (var item in Model.imgs)
                        {
                            <img src="@item.fileUrl" />
                        }
                    </div>
                </div>
            }
            @if (Model.videos != null && Model.videos.Count > 0)
            {
                <div class="jianyi_list no-border-bottom">
                    <h2>
                        生产视频</h2>
                    @foreach (var item in Model.videos)
                    {
                        <div class="media-graphic">
                            <a href="#">
                                <video src="@item.videoUrl" poster="@item.videoUrls" controls="controls" width="100%" height="100%">
                您的浏览器不支持视频播放。
            </video>
                            </a>
                        </div>
                    }
                </div>
            }
          
        </div>
    </div>
</body>
</html>
