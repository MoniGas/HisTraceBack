@model LinqModel.ScanMaterialMemo
@{
    ViewBag.Title = "Index";
    Layout = null;
}
<script type="text/javascript">
    var media = document.getElementById("video1");
    var i = 0;
    media.addEventListener("play", function () {
        if (i == 1) {
            return;
        }
        media.pause();
        if (confirm("该视频将消耗流量，是否继续播放！")) {
            i = 1;
            media.play();
        }
        else {
            i = 1;
        }
    });
</script>
@if (Model != null)
{
    if (Model.VideoUrl != null && !string.IsNullOrEmpty(Model.VideoUrl.videoUrl))
    {
    <div class="list clearfix">
        <div class="list-title">
            吃法视频
        </div>
        <div class="media-graphic">
            <video src="@Model.VideoUrl.videoUrl" id="video1" poster="@Model.VideoUrl.videoUrls" controls="controls" width="100%" height="100%">
                您的浏览器不支持视频播放。
            </video>
        </div>
    </div>
    }
    if (!string.IsNullOrEmpty(Model.Memo))
    {
    <div class="list clearfix">
        <div class="list-title">
            产品描述
        </div>
        <div class="product-des">
            @Html.Raw(Model.Memo)
        </div>
    </div>
    }
}