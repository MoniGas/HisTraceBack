@model LinqModel.Enterprise_FWCode_00
@{
    Layout = null;
    LinqModel.RequestCode RequestCodeModel = ViewBag.RequestCodeModel as LinqModel.RequestCode;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>医疗器械（UDI）服务云平台</title>
