                    @if (Model.Type == 1)
                    { 
                        <dt>包含的子码：</dt>
                        <dd>
                            @foreach (var item in Model.codeXML.Descendants("bottlecode"))
                            {
                                 <p>@item.Attribute("value").Value</p>
                            }
                        </dd>
                    }
                    else if (Model.Type == 2)
                    {
                        <dt>所属组码：</dt>
                        <dd>@Model.codeXML.Descendants("boxcode").FirstOrDefault().Attribute("value").Value</dd>
