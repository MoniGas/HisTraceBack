@{
    Layout = null;
}
<html>
<head>
    <meta charset="utf-8">
    <title>医疗器械（UDI）服务云平台</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0,user-scalable=no"
        id="viewport">
    <script src="/Scripts/jquery-1.7.2.min.js" type="text/javascript"></script>
    <script src="/Scripts/glvalidate.js" type="text/javascript"></script>
    <link href="/css/home.min.css" rel="stylesheet" type="text/css" />
    <link href="/css/style.min.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript">
        $(function () {
            $("#BtnSubmit").click(function () {
                if (isNull($("#TxtPwd").val())) {
                    alert("请输入旧密码");
                    return false;
                }
                if ($.trim($("#TxtPwd").val()).length < 6 || $.trim($("#TxtPwd").val()).length > 20) {
                    alert("请输入6-20位的密码！");
                    return false;
                }
                if (isNull($("#TxtSurePwd").val())) {
                    alert("请输入确认密码");
                    return false;
                }
                if ($("#TxtPwd").val() != $("#TxtSurePwd").val()) {
                    alert("两次输入的密码不一致");
                    return false;
                }
                $.ajax({
                    type: 'POST',
                    url: "/Wap_Consumers/UpdataPwd",
                    data: $("#formPwd").serialize(),
                    success: function (data) {
                        if (data.info != null && data.info != "") {
                            alert(data.info);
                        }
                        if (data.res) {
                            if (data.url != null && data.url != "") {
                                window.location.href = data.url;
                            }
                        }
                    }
                });
            })
        });
    </script>
</head>
<body>
    <!-- 页头 -->
    <section>
	<header class="headerbox">
    <a href="/Wap_Consumers/Index" class="art-back">返回</a>
		<h1 title="设置密码">设置密码</h1>
	</header>
</section>
    <!--内容-->
    <div class="scroll-wrap" style="border-bottom: 1px solid #e7e7e7;">
        <div class="scroll-content">
            <div class="item-list o-t-item" style="background: #fff;">
                <div class="item-img" style="background: #f5f5f5;">
                    <p>
                        <img src="/images/wapnew/haed.jpg" /></p>
                </div>
                <div class="item-info">
                    <h3 class="title mat10">
                        @ViewBag.linkPhone</h3>
                    @*   <p>
                        <a href="#" class="h">基本信息</a></p>*@
                </div>
            </div>
            <div class="box-mg">
                <form name="formPwd" id="formPwd">
                <input type="hidden" name="TxtConsumersId" id="TxtConsumersId" value="@ViewBag.consumersId">
                <dl class="list list-in">
                    <dd>
                        <dl>
                            <dd class="dd-padding kv-line">
                                <h6>
                                    新密码：
                                </h6>
                                <input class="input-weak kv-v" type="password" placeholder="请输入新密码" id="TxtPwd" name="TxtPwd"
                                    maxlength="20" />
                            </dd>
                            <dd class="dd-padding kv-line">
                                <h6>
                                    确认密码：
                                </h6>
                                <input class="input-weak kv-v" type="password" placeholder="请输入确认密码" id="TxtSurePwd"
                                    name="TxtSurePwd" maxlength="20" />
                            </dd>
                        </dl>
                    </dd>
                </dl>
                <section class="section-module mat10">
          <input type="button" class="orange-btn-l" id="BtnSubmit" name="BtnSubmit" value="保存">
	</section>
                </form>
            </div>
        </div>
    </div>
    <div class="juchou-footer">
        <footer>
            <p>医疗器械（UDI）服务云平台</p>
        </footer>
    </div>
</body>
</html>
