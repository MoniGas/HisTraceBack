@{
    Layout = null;
}
<html>
<head>
    <meta charset="utf-8">
    <title>医疗器械（UDI）服务云平台</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0,user-scalable=no"
        id="viewport">
    <script src="/Scripts/jquery-1.7.2.min.js" type="text/javascript"></script>
    <script src="/Scripts/glvalidate.js" type="text/javascript"></script>
    <link href="/css/home.min.css" rel="stylesheet" type="text/css" />
    <link href="/css/style.min.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript">
        $(function () {
            $("#btnSave").click(function () {
                if (isNull($("#Textcontent").val())) {
                    alert("请输入投诉原因！");
                    return false;
                }
                $.ajax({
                    type: 'POST',
                    url: '/Wap_Consumers/AddComplaint',
                    data: $("#formComplaint").serialize(),
                    success: function (data) {
                        alert(data.info);
                        if (data.res) {
                            window.location.href = data.url;
                        }
                        //                        try {
                        //                            formComplaint.reset();
                        //                        } catch (Error) { }
                    }
                })
            });
        });
    </script>
</head>
<body>
    <!-- 页头 -->
    <section>
        <header class="headerbox">
            <a href="/Wap_Consumers/Index" class="art-back">返回</a>
            <h1 title="消费者投诉">
                消费者投诉</h1>
        </header>
    </section>
    <!--内容-->
    <div class="scroll-wrap" style="border-bottom: 1px solid #e7e7e7;">
        <div class="scroll-content">
            <div class="item-list o-t-item" style="background: #fff;">
                <div class="item-img" style="background: #f5f5f5;">
                    <p>
                        <img src="/images/wapnew/haed.jpg" /></p>
                </div>
                <div class="item-info">
                    <h3 class="title mat10">@ViewBag.linkPhone</h3>
                    @*  <p>
                        <a href="#" class="h">基本信息</a></p>*@
                </div>
            </div>
            <form id="formComplaint">
            <dl class="list list-in">
                <dd>
                    <dl>
                        <dd class="dd-padding kv-line">
                            <h6>
                                投诉企业：
                            </h6>
                            <span class="kv-v grey">@ViewBag.enterpriseName</span>
                        </dd>
                        <dd class="dd-padding kv-line">
                            <h6>
                                投诉产品：
                            </h6>
                            <span class="kv-v grey">@ViewBag.materialName</span>
                        </dd>
                        <dd class="dd-padding kv-line">
                            <h6>
                                投诉原因：
                            </h6>
                            <textarea id="Textcontent" name="Textcontent" class="input-weak kv-v" style="height: 100px;"
                                placeholder="请填写投诉原因"></textarea>
                        </dd>
                    </dl>
                </dd>
            </dl>
            <section class="section-module mat10">
                <input id="btnSave" name="btnSave" type="button" class="orange-btn-l" value="投诉">
            </section>
            </form>
        </div>
    </div>
    <div class="juchou-footer">
        <footer>
            <p>
                医疗器械（UDI）服务云平台</p>
        </footer>
    </div>
</body>
</html>
