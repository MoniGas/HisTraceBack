                                    <div id="errortest">
                                        <i class="ico ico-err-2"></i><em class="red error-info">密码长度6-20个字符以内</em>
                                    </div>
                                    <div id="successPwd" style="display: none">
                                        <i class="ico ico-err-1"></i><em class="gray error-info">已输入密码</em>
                                    </div>
                                </span></span></li>
                        <li class="fm-item">
                            <label for="#" class="k">
                                <span class="red">*</span> 确认密码：</label>
                            <span class="v">
                                <input type="password" id="PwdT" name="PwdT" class="text text3" maxlength="20" />
                                <span class="text-error account-info">
                                    <div id="errorPwdT">
                                        <i class="ico ico-err-2"></i><em class="red error-info">请输入相同的密码</em>
                                    </div>
                                    <div id="successPwdT" style="display: none">
                                        <i class="ico ico-err-1"></i><em class="gray error-info">输入密码正确</em>
                                    </div>
                                </span></span></li>
                    </ul>
                    <div class="line">
                    </div>
                    <ul class="mt10">
                        <li class="fm-item" style="display: none">
                            <label for="#" class="k">
                                单位邮箱：</label>
                            <span class="v">
                                <input type="text" id="Email" name="Email" class="text text3" />
                            </span></li>
                        <li class="fm-item">
                            <label for="#" class="k">
                                <span class="red">*</span> 组织/单位名称：</label>
                            <span class="v">
                                <input type="text" id="Organize" name="Organize" class="text text3" maxlength="50"
                                    readonly="readonly" />
                            </span></li>
                        <li class="fm-item">
                            <label for="#" class="k">
                                组织/单位英文名称：</label>
                            <span class="v">
                                <input type="text" id="OrganizeEn" name="OrganizeEn" class="text text3" maxlength="50" />
                            </span></li>
                        <li class="fm-item">
                            <label for="#" class="k">
                                代理编码：</label>
                            <span class="v">
                                <input type="text" id="plat" name="plat" class="text text3" maxlength="50" />
                                <span class="text-error account-info">
                                    <div id="errorPlat" style="display: none">
                                        <i class="ico ico-err-2"></i><em class="red error-info">没有查到代理信息</em>
                                    </div>
                                </span></span></li>
                        <li class="fm-item">
                            <label for="#" class="k">
                                <span class="red">*</span> 单位性质：</label>
                            <span class="v">
                                @Html.Action("HisUnitType", "Public")
                            </span></li>
                        <li class="fm-item">
                            <label for="#" class="k">
                                <span class="red">*</span> 组织/单位所在区域：</label>
                            <span class="v">
                                @Html.Action("Address", "Public")
                            </span></li>
                        <li class="fm-item">
                            <label for="#" class="k">
                                <span class="red">*</span> 组织/单位联系人：</label>
                            <span class="v">
                                <input type="text" id="User" name="User" class="text text3" maxlength="50" />
                                <span class="text-error account-info">
                                    <div id="errorUser">
                                        <i class="ico ico-err-2"></i><em class="red error-info">请输入组织/单位联系人</em>
                                    </div>
                                    <div id="successUser" style="display: none">
                                        <i class="ico ico-err-1"></i><em class="gray error-info">已输入组织/单位人</em>
                                    </div>
                                </span></span></li>
                        <li class="fm-item">
                            <label for="#" class="k">
                                组织/单位联系人英文名：</label>
                            <span class="v">
                                <input type="text" id="UserEn" name="UserEn" class="text text3" maxlength="50" />
                            </span></li>
                        <li class="fm-item">
                            <label for="#" class="k">
                                <span class="red">*</span>组织/单位联系人手机：</label>
                            <span class="v">
                                <input type="text" id="Tel" name="Tel" class="text text3" />
                                <input type='button' id="btGetCode" class="btn btn-1" onclick="GetVerifyCode()" value="获取验证码" />
                                <span class="text-error account-info">
                                    <div id="errorTel">
                                        <i class="ico ico-err-2"></i><em class="red error-info">请输入正确的手机号码</em>
                                    </div>
                                    <div id="successTel" style="display: none">
                                        <i class="ico ico-err-1"></i><em class="gray error-info">已输入组织/单位人手机</em>
                                    </div>
                                </span></span></li>
                        <li class="fm-item">
                            <label for="#" class="k">
                                手机验证码：</label>
                            <span class="v">
                                <input type="text" id="txtCode" name="txtCode" class="text text3" />
                            </span></li>
                    </ul>
                    <div class="btns">
                        <input type="button" class="btn btn-2" value="上一步" onclick="onNavClick(1)" />
                        <input type='button' id="bt3" class="btn btn-1" value="注册" onclick=" Register()" />
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
