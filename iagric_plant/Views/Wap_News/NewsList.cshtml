        【@ViewBag.ChannelName】</h3>
    @if (Model.Count > 0)
    {
        <div class="section-module">
            <ul class="news_items morelistbox">
                @{
        foreach (var item in Model)
        {
                    <li><a href="/Wap_News/NewsShow?id=@item.ID&ewm=@ViewBag.ewm">@item.Title</a></li>    
        }
                }
            </ul>
        </div>

        <div class="linle-pag0">
            <div class="linle-pag">
                @Html.Pager(Model, new PagerOptions { PageIndexParameterName = "id", NumericPagerItemWrapperFormatString = "{0}", ShowDisabledPagerItems = false, AlwaysShowFirstLastPageNumber = true })
            </div>
        </div>
    }
</div>
